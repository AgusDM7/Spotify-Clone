---
import LibraryIcon from "@/icons/Library.astro";
import HomeIcon from "@/icons/Home.astro";
import SearchIcon from "@/icons/Search.astro";
import SideMenuItem from "./SideMenuItem.astro";
import {playlists} from "@/lib/data"
import SideMenuCard from "@/components/SideMenuCard.astro"
---

<nav class="flex flex-col flex-1 gap-2">
    {/* Menú principal */}
    <div class="bg-neutral-900 rounded-lg p-2">
        <ul>
            <SideMenuItem href="/">
                <HomeIcon />
                Inicio
            </SideMenuItem>

            <SideMenuItem href="/search" >
                <SearchIcon />
                Buscar
            </SideMenuItem>
        </ul>
    </div>

    {/* Biblioteca con pills */}
    <div class="bg-neutral-900 rounded-lg p-2 flex-1 flex flex-col">
        <ul>
            <SideMenuItem href="/">
                <LibraryIcon />
                Tu biblioteca
            </SideMenuItem>
        </ul>

        {/* Pills de filtros estilo Spotify */}
        <div class="flex gap-2 mt-4 px-2 overflow-x-auto scrollbar-hide">
            <button class="pill-filter pill-active">
                Álbumes
            </button>
            <button class="pill-filter">
                Playlists
            </button>
            <button class="pill-filter">
                Artistas
            </button>
        </div>

        {/* Lista de playlists con scroll */}
        <div class="mt-8 overflow-y-auto flex-1">
            {playlists.map((playlist) => <SideMenuCard playlist={playlist} />)}
        </div>
    </div>
</nav>

<style>
    .pill-filter {
        padding: 6px 12px;
        border-radius: 16px;
        font-size: 0.875rem;
        font-weight: 400;
        white-space: nowrap;
        transition: all 0.2s;
        background-color: rgba(255, 255, 255, 0.07);
        color: #b3b3b3;
        border: none;
        cursor: pointer;
    }

    .pill-filter:hover {
        background-color: rgba(255, 255, 255, 0.1);
        color: #ffffff;
    }

    .pill-active {
        background-color: #ffffff;
        color: #000000;
    }

    .pill-active:hover {
        background-color: #ffffff;
        color: #000000;
    }

    
</style>